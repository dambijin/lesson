<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
	PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
<!-- tag(=node)의 순서에 주의 -->

	<!-- 전달인자로 null을 줄 수 있음 -->
	<settings>
		<setting name="jdbcTypeForNull" value="NULL"/>
	</settings>

	<!-- mapper에서 사용할 타입이 길어사 짧게 별칭 지정 -->
	<typeAliases>
<!-- 		임포트 해주는 것 -->
		<typeAlias type="com.spring.ex01.EmpDTO" alias="empDTO"/>
		<typeAlias type="com.spring.ex03.param.EmpDTO" alias="empDTO3"/>
	</typeAliases>

	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC"></transactionManager>
<!-- 			dataSource는 connectionpool에 관련한내용 -->
			<dataSource type="POOLED">
				<property name="driver" value="oracle.jdbc.driver.OracleDriver"></property>
				<property name="url" value="jdbc:oracle:thin:@112.148.46.134:51521:xe"></property>
				<property name="username" value="scott4_12"></property>
				<property name="password" value="tiger"></property>
			</dataSource>
		</environment>
	</environments>
	
	
	<!-- emp.xml을 알기위해 적은 것 -->
	<mappers>
		<mapper resource="mybatis/mappers/emp.xml"/>
		<mapper resource="mybatis/mappers/emp_param.xml"/>
	</mappers>
	
</configuration>